<h1>Perpustakaan Sekolah</h1>
<h2>Daftar</h2>

<body>
  <h3>Apakah Anda ingin menambahkan transaksi peminjaman buku terbaru? <%= link_to 'Klik Disini', books_new_path %></h3>

  <%= search_field_tag :search, params[:search], placeholder: "Ketik Nama Buku" , :required => true %>  
    <%= button_tag do%> 
  <%= t('Cari Buku')%>
  <% end %>

  <table>
  <tr>
    <th>Judul</th>
    <th>Penulis</th>
    <th>Tanggal Peminjaman</th>
    <th>Tanggal Pengembalian</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.author %>
      </td>
      <td>
        <%= (book.borrow_time).to_date %>
      </td>
      <td>
        <%= (book.return_due_date).to_date %>
      </td>
    </tr>
  <% end %>
  </table>
</body>
